{
    "globals": {
		"__": true
    },
    "env": {
        "es6": true,
		"node": true,
		"mocha":true
    },
    "extends": "eslint:recommended",
    "rules": {
        "brace-style": [
            "error",
            "1tbs"
        ],
        "no-console": 0,
        "indent": [
            "error",
            "tab"
        ],
        "linebreak-style": [
            "error",
            "windows"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ]
    }
}