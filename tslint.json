{
    "defaultSeverity": "error",
    "extends": [
        "tslint:recommended"
    ],
    "jsRules": {},
    "rules": {
    	"variable-name": {
		  "options": [
		    "ban-keywords",
		    "check-format",
		    "require-const-for-all-caps",
		    "allow-leading-underscore",
		    "allow-pascal-case"
		  ]
		},
        "indent": [true, "tabs", 4],
        "max-line-length": [true, 250]
    },
    "rulesDirectory": []
}